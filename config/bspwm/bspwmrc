#!/bin/zsh

sxhkd &

ws1=desktop
ws2=browse
ws3=code
ws4=edit
ws5=cli
ws6=media
ws7=communicate
ws8=8
ws9=9
ws10=10

bspc config border_width          2
bspc config window_gap            5
bspc config top_padding           28

bspc config split_ratio           0.52
bspc config single_monocle        true
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config focus_by_distance     true
bspc config history_aware_focus   true
bspc config focus_follows_pointer false
bspc config pointer_follows_focus false
bspc config click_to_focus        true
bspc config adaptive_raise        true

bspc monitor LVDS -d $ws1 $ws2 $ws3 $ws4 $ws5 $ws6 $ws7
bspc monitor HDMI-0 -d $ws9
bspc monitor VGA-0 -d $ws0

bspc desktop $ws2 -l monocle

bspc rule -a Firefox desktop=^2
bspc rule -a Gimp desktop=^4 state=floating follow=on
bspc rule -a mplayer desktop=^6 state=floating
bspc rule -a Thunderbird desktop=^7
bspc rule -a VirtualBox state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

compton -b &
udiskie -q &
feh --bg-scale ~/Pictures/Wallpapers/0134.jpg &
xss-lock -- i3lock -n -i ~/Pictures/0030.png &
$HOME/.config/polybar/launch.sh
xrdb ~/.Xresources

dropbox start &
