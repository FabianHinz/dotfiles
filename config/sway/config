set $gnome-schema org.gnome.desktop.interface

exec_always {
  gsettings set $gnome-schema gtk-theme 'Ant-Dracula-master'
  gsettings set $gnome-schema icon-theme 'PlaneDarkGnomedarkMagentadark-1.8'
  gsettings set $gnome-schema cursor-theme 'Adwaita'
}

