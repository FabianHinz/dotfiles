#
# Defines environment variables.
#

# User specific XDG directories
export XDG_DATA_HOME=$HOME/.local/share
export XDG_CONFIG_HOME=$HOME/.config

# EDITORS
export EDITOR='nvim'
export DIFF='nvim -d'
export VISUAL='nvim -R'
export PAGER='less'

# Language
# ========
if [[ -z "$LANG" ]]; then
  export LANG='en_US.UTF-8'
fi
