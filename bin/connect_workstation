#!/bin/sh

xrandr --output DP2 --primary --auto --output LVDS1 --auto --left-of DP2

~/.fehbg

bspc desktop music -m DP2
bspc desktop edit -m DP2
bspc desktop code -m DP2
bspc desktop cli -m DP2
bspc desktop media -m DP2
bspc desktop browsebig -m DP2

bspc monitor DP2 -o music edit code cli media browsebig
bspc monitor DP2 -d music edit code cli media browsebig

