#!/bin/bash

CMPFILE=${CMPFILE:-/tmp/${USER}/cmpFile}

if [ -e $CMPFILE ]; then
    compton -b &
    sleep 1
    notify-send "Compton" "<i>enabled</i>"
    rm $CMPFILE
else
    echo $ "dummytext" >> $CMPFILE
    pgrep -f "compton -b" | xargs kill
    sleep 1
    notify-send "Compton" "<i>disabled</i>"
fi
