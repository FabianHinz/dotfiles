#!/bin/sh

xrandr --output DP2 --off

bspc desktop music -m LVDS1
bspc desktop edit -m LVDS1
bspc desktop code -m LVDS1
bspc desktop cli -m LVDS1
bspc desktop media -m LVDS1
bspc desktop browsebig -m LVDS1

bspc monitor LVDS1 -o home chat mail browse music edit code cli media browsebig
bspc monitor LVDS1 -d home chat mail browse music edit code cli media browsebig

bspc monitor DP2 -r 
